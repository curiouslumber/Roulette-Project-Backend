CREATE TABLE Users(
    user_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    email VARCHAR(200),
    role VARCHAR(10),
    password VARCHAR(64)
);
-- SQLBook: Code
CREATE TABLE ActiveUsers (
    user_id INT UNIQUE,
    last_active_date DATE,
    last_active_time TIME,
    FOREIGN KEY (user_id) REFERENCES Users(user_id)
);

